{
  "name": "myapp-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "native": "yarn turbo dev --filter=\"expo-app\"",
    "web": "yarn turbo dev --filter=\"next-app\"",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "postinstall": "yarn build",
    "build": "turbo build"
  },
  "resolutions": {
    "esbuild": "0.15.6",
    "@types/react": "17.0.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "12.3.0",
    "react-native-web": "0.18.6"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.19.1",
    "@types/react": "^18.0.15",
    "@types/react-native": "^0.69.6",
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "turbo": "^1.4.2",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.3"
}
