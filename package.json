    "@trpc/server": "^10.5.0",
    "clsx": "^1.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-pattern": "^4.0.6"
  },
  "devDependencies": {
    "prettier": "^2.8.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
