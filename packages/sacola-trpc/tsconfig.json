{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
